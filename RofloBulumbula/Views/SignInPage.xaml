<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Авторизация"  
             x:Class="RofloBulumbula.Views.SignInPage">
    <ContentPage.Content>

        <StackLayout Margin="50,100,50,0">
            <Entry x:Name="LoginTextBox" 
                   Placeholder="Логин"
                   FontSize="22"
                   Text="{Binding Login}"
                   />
            <Entry x:Name="PasswordTextBox"
                   Margin="0,30"
                   IsPassword="True"
                   Placeholder="Пароль"
                   FontSize="22"
                    Text="{Binding Password}"/>

            <Button x:Name="LoginButton" Text="войти" FontSize="18" Clicked="LoginButton_Clicked" Command="{Binding SignInCommand}"/>
        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>